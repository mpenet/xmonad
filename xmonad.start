#!/bin/bash


# disable touchpad

if xinput list-props 16 | grep "TouchPad"; then
    xinput set-prop 16 125 0 &
fi

xrandr --output LVDS1 --primary &

trayer --edge top --align right --widthtype request --height 13 --padding 1 --alpha 255  --transparent true &

nm-applet --sm-disable &

exec xmonad




